<% provide :title, "Admin home" %>
<div class="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">List buses</h1>
      <button type="button" class="btn btn-info"><i class="fa fa-plus"></i>
      Add bus
      </button>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">STT</th>
          <th scope="col">Name</th>
          <th scope="col">Number of seats</th>
          <th scope="col">Type of bus</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @buses.each do |bus| %>
          <tr>
            <th scope="row">1</th>
            <td><%= bus.name %></td>
            <td><%= bus.number_of_seats %></td>
            <td><%= bus.type_of_bus.name %></td>
            <td>
              <button type="button" class="btn btn-warning btn-circle"><i class="fa fa-edit"></i>
              </button>
              <button type="button" class="btn btn-danger btn-circle"><i class="fa fa-times"></i>
              </button>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
